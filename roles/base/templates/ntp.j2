#NTP config managed by Ansible 
#do not edit this file.. used for ntp server config.

driftfile /var/lib/ntp/drift
restrict default nomodify notrap nopeer noquery
restrict 127.0.0.1 
restrict ::1
 
{% for item in base['ntp'] %}
server {{ item }} iburst
{% endfor %}

keys /etc/ntp/keys
disable monitor